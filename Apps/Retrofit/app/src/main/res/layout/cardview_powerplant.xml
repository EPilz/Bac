<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/cv_powerPlant"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/powerPlant_name"
                android:layout_alignParentTop="true"
                android:textSize="15sp"

                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/powerPlant_edit"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:layout_toStartOf="@+id/powerPlant_delete"
                android:src="@drawable/edit"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/powerPlant_delete"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:src="@drawable/trash"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/powerPlant_commissioningDate"
                android:layout_below="@+id/powerPlant_name"
                android:textSize="12sp"
                android:layout_marginLeft="6dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/powerPlant_turbineType"
                android:layout_below="@+id/powerPlant_commissioningDate"
                android:textSize="12sp"
                android:layout_marginLeft="6dp"
                />





        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>